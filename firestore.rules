rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Visitors collection
    match /visitors/{visitorId} {
      allow read, write: if true; // Allow all for now, will add authentication later
    }
    
    // Staff collection
    match /staff/{staffId} {
      allow read: if true;
      allow write: if false; // Only admins can modify staff
    }
    
    // Visitor logs
    match /visitor_logs/{logId} {
      allow read, write: if true;
    }
    
    // Staff logs
    match /staff_logs/{logId} {
      allow read, write: if true;
    }
    
    // OTP collection (temporary storage)
    match /otps/{otpId} {
      allow read, write: if true;
    }
  }
}